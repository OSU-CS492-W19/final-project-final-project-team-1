<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/detailact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_champion_splash_art"
        android:layout_gravity="center_horizontal"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_champion_icon"
            android:padding="8dp"
            android:layout_width="72dp"
            android:layout_height="72dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_champion_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="24sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_champion_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginLeft="12dp"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_loading_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="16dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/holo_red_light"
                android:textColor="#fff"
                android:visibility="invisible"
                android:text="@string/loading_error_message" />

            <ProgressBar
                android:id="@+id/pb_loading_indicator"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="32dp"
                android:layout_gravity="top|center_horizontal"
                android:visibility="invisible"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>